{
  "name": "zen-editor",
  "version": "1.0.0",
  "description": "A pure JS, inlined WYSIWYG HTML editor.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "compile-styles": "node-sass --output-style compressed --source-map true --source-map-contents true --precision 6 src/styles/index.scss dist/styles/index.css",
    "make-bundle": "browserify demo/main.js -t babelify --outfile demo/bundle.js",
    "build": "tsc && npm run compile-styles && npm run make-bundle",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hawschiat/zen-editor.git"
  },
  "keywords": [
    "WYSIWYG",
    "editor"
  ],
  "author": "Seng Chiat Haw",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/hawschiat/zen-editor/issues"
  },
  "homepage": "https://github.com/hawschiat/zen-editor#readme",
  "dependencies": {
    "typescript": "^3.9.6"
  },
  "devDependencies": {
    "@babel/core": "^7.10.4",
    "@types/node": "^14.0.19",
    "babel-preset-env": "^1.7.0",
    "babelify": "^10.0.0",
    "browserify": "^16.5.1",
    "node-sass": "^4.14.1",
    "tslint": "^6.1.2",
    "tslint-config-airbnb": "^5.11.2"
  }
}
